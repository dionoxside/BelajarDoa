<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fix"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kosanworks.belajardoa.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:weightSum="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/doa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:text="Pilihan Doa"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:theme="@style/tombol" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tantangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:text="Tantangan"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:theme="@style/tombol" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/panduan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:text="Panduan"
            android:textSize="18sp"

            android:textColor="@android:color/white"
            android:theme="@style/tombol" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/tentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:text="Tentang"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:theme="@style/tombol" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/keluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded"
            android:text="Keluar"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:theme="@style/tombol" />
    </LinearLayout>
</LinearLayout>
