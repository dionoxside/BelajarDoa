<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tentang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kosanworks.belajardoa.Tentang">

    <TextView
        android:id="@+id/keterangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keterangan"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/keterangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keterangan2"
        android:textSize="15sp"
        android:gravity="center"
        android:id="@+id/keterangan2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/nama"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama"
        android:layout_below="@+id/keterangan2"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/npm"
        android:layout_marginLeft="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/npm"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/nama"
        />
    <TextView
        android:layout_marginLeft="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kampus"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/npm"/>


</RelativeLayout>
